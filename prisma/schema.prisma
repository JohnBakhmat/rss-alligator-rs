datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

model Post {
    id       String  @id @default(cuid())
    title    String
    link     String  @unique
    pub_date String
    feed     Feed?   @relation(fields: [feed_id], references: [id])
    feed_id  String?
}

model Feed {
    id    String @id @default(cuid())
    title String
    link  String @unique
    posts Post[]
}
