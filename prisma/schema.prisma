datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

model Post {
    id       String  @id @default(cuid())
    title    String
    link     String
    pub_date String
    Feed     Feed?   @relation(fields: [feedId], references: [id])
    feedId   String?
}

model Feed {
    id    String @id @default(cuid())
    title String
    link  String
    posts Post[]
}
